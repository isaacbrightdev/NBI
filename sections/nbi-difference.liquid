<div class="container xl:gx-xl my-7 lg:my-12">
  <div class="overflow-hidden">
    <header class="md:text-center mb-7 lg:mb-12">
      <img
        src="{{ section.settings.icon | image_url }}"
        width="{{ section.settings.icon.width }}"
        height="{{ section.settings.icon.height }}"
        loading="lazy"
        class="md:block md:mx-auto"
      >
      <p class="text-callout mt-6 mb-3.5">{{ section.settings.eyebrowText }}</p>
      <h2>{{ section.settings.title }}</h2>
    </header>

    <div class="nbi-difference--tiles">
      {% for block in section.blocks %}
        <div class="nbi-difference--tile">
          <img
            src="{{ block.settings.image | image_url: width: 100 }}"
            class="w-[75px] lg:w-[100px]"
          >
          <div class="flex-1">
            <h4 class="font-medium mb-1">{{ block.settings.heading }}</h4>
            <div class="text-callout lg:text-base font-normal">
              {{ block.settings.text }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "NBI Difference Module",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon Image"
    },
    {
      "type": "text",
      "id": "eyebrowText",
      "label": "Eyebrow Text"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "tile",
      "name": "Tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "NBI Difference Module"
    }
  ]
}
{% endschema %}
