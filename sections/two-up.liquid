{% liquid
  assign text_color_1 = ''
  if section.settings.text_color_1 == 'light'
    assign text_color_1 = 'text-white'
  elsif section.settings.text_color_1 == 'dark'
    assign text_color_1 = 'text-primary'
  endif

  assign button_color_1 = ''
  if section.settings.text_color_1 == 'light'
    assign button_color_1 = 'border-accent text-accent'
  elsif section.settings.text_color_1 == 'dark'
    assign button_color_1 = 'border-primary text-primary'
  endif

  assign image_1 = section.settings.image_1
  assign title_1 = section.settings.title_1
  assign subtitle_1 = section.settings.subtitle_1
  assign link_1 = section.settings.link_1
  assign cta_1 = section.settings.cta_1

  assign text_color_2 = ''
  if section.settings.text_color_2 == 'light'
    assign text_color_2 = 'text-white'
  elsif section.settings.text_color_2 == 'dark'
    assign text_color_2 = 'text-primary'
  endif
  if section.settings.text_color_2 == 'light'
    assign button_color_2 = 'border-accent text-accent'
  elsif section.settings.text_color_2 == 'dark'
    assign button_color_2 = 'border-primary text-primary'
  endif

  assign image_2 = section.settings.image_2
  assign title_2 = section.settings.title_2
  assign subtitle_2 = section.settings.subtitle_2
  assign link_2 = section.settings.link_2
  assign cta_2 = section.settings.cta_2
%}

{% capture ctaSvg %}
  <svg
    width="15"
    height="16"
    viewBox="0 0 15 16"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="ml-[10px]">
    <path
      d="M1.7998 7.39844H13.4998"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round" />
    <path
      d="M10.3511 10.548L13.5011 7.39805L10.3511 4.24805"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round" />
  </svg>
{% endcapture %}

<div class="w-full">
  <div class="container xl:gx-xl">
    <div class="flex flex-col w-full md:flex-row md:justify-items-stretch">
      {% unless image_1 == blank %}
        <div
          class="flex flex-col justify-center w-full bg-center bg-cover md:w-1/2"
          style="background-image: url('{{ image_1 | image_url: width: 1024 }}')"
        >
          <div class="{{ text_color_1 }} pr-0 pl-[20px] py-[20px] md:pl-[30px] md:py-[30px] max-w-[355px] md:max-w-[420px]">
            {% unless title_1 == blank %}
              <h2>{{ title_1 }}</h2>
            {% endunless %}
            {% unless subtitle_1 == blank %}
              <p class="leading-[130%]">{{ subtitle_1 }}</p>
            {% endunless %}
            {% unless link_1 == blank or cta_1 == blank %}
              <a href="{{ link_1 }}">
                <button
                  type="button"
                  class="{{ button_color_1 }} btn w-auto flex items-center py-[7px] px-[15px] mt-[15px] font-medium rounded-[500px]"
                >
                  {{ cta_1 }}
                  {{ ctaSvg }}
                </button>
              </a>
            {% endunless %}
          </div>
        </div>
      {% endunless %}
      {% unless image_2 == blank %}
        <div
          class="flex flex-col justify-center w-full bg-center bg-cover md:w-1/2"
          style="background-image: url('{{ image_2 | image_url: width: 1024 }}')"
        >
          <div class="{{ text_color_2 }} pr-0 pl-[20px] py-[20px] md:pl-[30px] md:py-[30px] max-w-[355px] md:max-w-[420px]">
            {% unless title_2 == blank %}
              <h2>{{ title_2 }}</h2>
            {% endunless %}
            {% unless subtitle_2 == blank %}
              <p class="leading-[130%]">{{ subtitle_2 }}</p>
            {% endunless %}
            {% unless link_2 == blank or cta_2 == blank %}
              <a href="{{ link_2 }}">
                <button
                  type="button"
                  class="{{ button_color_2 }} btn w-auto flex items-center py-[7px] px-[15px] mt-[15px] font-medium rounded-[500px]"
                >
                  {{ cta_2 }}
                  {{ ctaSvg }}
                </button>
              </a>
            {% endunless %}
          </div>
        </div>
      {% endunless %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Two-up Module",
  "settings": [
    {
      "type": "header",
      "content": "First Module"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Background Image 1"
    },
    {
      "type": "select",
      "id": "text_color_1",
      "label": "Text Color 1",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Unlimited CLE"
    },
    {
      "type": "text",
      "id": "subtitle_1",
      "label": "Subtitle 1",
      "default": "As a subscriber, you'll get unlimited access to our endless library of top legal content covering every topic you can imagine"
    },
    {
      "type": "url",
      "id": "link_1",
      "label": "Link 1 url"
    },
    {
      "type": "text",
      "id": "cta_1",
      "label": "Link 1 CTA",
      "default": "More"
    },
    {
      "type": "header",
      "content": "Second Module"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Background Image 2"
    },
    {
      "type": "select",
      "id": "text_color_2",
      "label": "Text Color 2",
      "default": "light",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ]
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "eLearning"
    },
    {
      "type": "text",
      "id": "subtitle_2",
      "label": "Subtitle 2",
      "default": "Be part of the experience with our collaborative courses that blend education, training and interactive tech for more dynamic learning."
    },
    {
      "type": "url",
      "id": "link_2",
      "label": "Link 2 url"
    },
    {
      "type": "text",
      "id": "cta_2",
      "label": "Link 2 CTA",
      "default": "More"
    }
  ],
  "presets": [
    {
      "name": "Two-up Module",
      "category": "Two-up Module"
    }
  ]
}
{% endschema %}
