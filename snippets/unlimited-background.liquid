      <linearGradient id="paint3_linear_7381_46975" x1={{ linearGradient04X1 }} y1={{ linearGradient04Y1 }} x2={{ linearGradient04X2 }} y2={{ linearGradient04Y2 }} gradientUnits="userSpaceOnUse">
          <stop stop-color="{{ stopColor1 }}"/>
          <stop offset="1" stop-color="{{ stopColor2 }}"/>
      </linearGradient>
  </defs>
</svg>
