  height="{{ h }}"
  viewBox="0 0 {{ w }} {{ h }}"
  fill="none"
  class="{{ classes }}"
  xmlns="http://www.w3.org/2000/svg"
>
  <circle cx="367.5" cy="273.773" r="367.5" transform="{{ transform1 }}" fill="url(#paint0_linear_7381_46975)"/>
  <circle cx="428.75" cy="335.023" r="306.25" transform="{{ transform2 }}" fill="url(#paint1_linear_7381_46975)"/>
