  <circle cx="551.25" cy="457.523" r="183.75" transform="{{ transform4 }}" fill="url(#paint3_linear_7381_46975)"/>
  <defs>
      <linearGradient id="paint0_linear_7381_46975" x1={{ linearGradient01X1 }} y1={{ linearGradient01Y1 }} x2={{ linearGradient01X2 }} y2={{ linearGradient01Y2 }} gradientUnits="userSpaceOnUse">
          <stop stop-color="{{ stopColor1 }}"/>
