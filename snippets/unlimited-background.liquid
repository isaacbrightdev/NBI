{% comment %}
  {% # prettier-ignore %}
  <documentation>

  unlimited-background - generates a default background for the unlimited module

                        *** ONLY WORKS WITH SHOPIFY CDN URLS ***

  =====================================

  Required Params:
    stopColor1 (string):  gradient stop color variable

    stopColor2 (string):  gradient stop color variable

    theme (string): light or dark


  Optional Params:
    classes (string):         CSS/Tailwind classes to style the base img element with.

    width (number): Width of SVG

    height (number): Height of SVG

  =====================================

  Example Input:
    {% render 'unlimited-background',
      stopColor1: '',
      stopColor2: '',
      classes: 'rounded-[10px] h-auto'
      theme: 'dark'
    %}

  </documentation>
  {%- endif -%}
{% endcomment %}
{% # prettier-ignore %}
{% liquid 

    assign w = 569
    assign h = 451

    if width
        assign w = width
    endif

    if height
        assign h = height
    endif

    assign transform1 = 'rotate(-180 367.5 273.773)'
    assign linearGradient01X1 = '719.147'
    assign linearGradient01Y1 = '641.273'
    assign linearGradient01X2 = '-143.967'
    assign linearGradient01Y2 = '176.038'

    assign transform2 = 'rotate(-180 428.75 335.023)'
    assign linearGradient02X1 = '721.789'
    assign linearGradient02Y1 = '641.273'
    assign linearGradient02X2 = '2.52733'
    assign linearGradient02Y2 = '253.578'

    assign transform3 = 'rotate(-180 490 396.273)'
    assign linearGradient03X1 = '724.431'
    assign linearGradient03Y1 = '641.273'
    assign linearGradient03X2 = '149.022'
    assign linearGradient03Y2 = '331.117'

    assign transform4 = 'rotate(-180 551.25 457.523)'
    assign linearGradient04X1 = '727.074'
    assign linearGradient04Y1 = '641.273'
